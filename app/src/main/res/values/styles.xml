<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.MT" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/fontColorMT</item>

        <item name="colorPrimary">@color/background_menu</item>
        <item name="colorPrimaryDark">@color/background_menu</item>
        <item name="colorAccent">@color/fontColorMT</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="colorControlNormal">@color/fontColorMT</item>
        <item name="colorControlActivated">@color/fontColorMT</item>
        <item name="colorControlHighlight">@color/fontColorMT_strong</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/success</item>
        <item name="android:colorButtonNormal">@color/success</item>

        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/background_menu</item>
        <item name="android:background">@color/background_menu</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
